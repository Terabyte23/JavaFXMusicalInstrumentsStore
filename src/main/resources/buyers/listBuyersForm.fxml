<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbBuyersFormRoot" prefHeight="400.0" prefWidth="600.0" styleClass="bodyDown" stylesheets="@../css/appStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MusicalInstrumentStoreFX.controller.">
    <children>
        <TableView fx:id="tvListInstruments" prefHeight="426.0" prefWidth="600.0" styleClass="mainBody" stylesheets="@../css/appStyle.css">
            <columns>
                <TableColumn fx:id="tcIdBuyers" prefWidth="54.0" text="Id" />
                <TableColumn fx:id="tcLoginBuyers" prefWidth="156.0" text="Логин" />
                <TableColumn fx:id="tcPasswordBuyers" prefWidth="163.0" text="Пароль" />
                <TableColumn fx:id="tcEmailBuyers" prefWidth="113.0" text="Почта" />
                <TableColumn fx:id="tcPhoneBuyers" prefWidth="113.0" text="Телефон" />
            </columns>
        </TableView>
        <HBox fx:id="hbEditInstruments" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="600.0" visible="false">
            <children>
                <Button mnemonicParsing="false" onAction="#showEditBuyersForm" text="Редактировать покупателя" />
                <Button mnemonicParsing="false" onAction="#showDeleteBuyersForm" text="Удалить" />
            </children>
            <padding>
                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </padding>
        </HBox>
    </children>
</VBox>
